@using AuditInspect.Models
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Pages/Shared/_LayoutUnauthorized.cshtml";
}

<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a asp-action="Login" class="h1"><b>Audit</b>Inspect</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Ai uitat parola? Aici poti sa recuperezi usor parola.</p>
      <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group mb-3">
          <input type="email" class="form-control" asp-for="Email" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Reseteaza parola</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <p class="mt-3 mb-1">
        <a asp-action="Login">Autentificare</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>