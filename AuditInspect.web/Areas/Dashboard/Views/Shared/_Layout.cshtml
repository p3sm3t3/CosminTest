@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Edafic</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ConfirmEmail.css" />


    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

</head>
<body>
    <header class="header">

        <nav class="navbar navbar-dark bg-primary">
            <div class="container">

                <a class="navbar-brand" href="index.html">
                    <img src="https://www.w3schools.com/tags/img_girl.jpg" width="70" alt="logo"
                         class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="ti-menu"></span>
                </button>


                <div class="collapse navbar-collapse main-menu" id="navbarSupportedContent">

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link page-scroll" asp-area="Dashboard" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                            </li>
                              <li class="nav-item">
                                <a class="nav-link page-scroll" asp-area="Dashboard" asp-controller="Account" asp-action="Logout">Log out</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Dashboard" asp-controller="Account" asp-action="SignOut" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-light"><i class="fas fa-sign-out-alt"></i></button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto">
                            <h5>test</h5>
                            <li class="nav-item">
                                <a class="nav-link page-scroll" asp-area="Dashboard" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link page-scroll" asp-area="Dashboard" asp-controller="Account" asp-action="Login">Log in</a>
                            </li>
                              
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
           
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - PRacticeCourse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
</body>
</html>